<%= form_for(@suggestion) do |f| %>
  <% if @suggestion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@suggestion.errors.count, "error") %> prohibited this suggestion from being saved:</h2>

      <ul>
      <% @suggestion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= f.label :category %><br>
    <%= f.collection_select :category, Suggestion::CATEGORIES_LIST, :to_s, :to_s, include_blank: false %>
  </div>
  <div class="input-field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="input-field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="input-field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :photo %><br>
    <%= f.file_field :photo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
