<h1>Listing Suggestions</h1>

<body>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Category</th>
        <th>Name</th>
        <th>Description</th>
        <th>Liked</th>
        <th>Location</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @suggestions.each do |suggestion| %>
        <tr>
          <td><%= suggestion.user_id %></td>
          <td><%= suggestion.category_id %></td>
          <td><%= suggestion.name %></td>
          <td><%= suggestion.description %></td>
          <td><%= suggestion.liked %></td>
          <td><%= suggestion.location %></td>
          <td><%= link_to 'Show', suggestion %></td>
          <td><%= link_to 'Edit', edit_suggestion_path(suggestion) %></td>
          <td><%= link_to 'Destroy', suggestion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>

