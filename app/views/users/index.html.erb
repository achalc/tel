<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<body>
  <table>
    <thead>
      <tr>
        <th>Profile Picture</th>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag (user.profile_picture), :class => "circle responsive-image sugg-user" %></td>
          <td><%= link_to user.name, user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>

<br>

<%= link_to 'New User', new_user_path %>