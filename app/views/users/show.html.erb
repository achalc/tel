<% content_for :body_class, 'reg' %>
<% content_for :title, "@User's Profile" %>
<% content_for :topleft, "Back" %>
<% content_for :leftlink, "/index/" %>

<div class="row">
	<div class="col s12 profile-box">
		<p><span class="profile-name"><strong><%= @user.first_name + " " + @user.last_name %></strong></span> <br>
		<%= image_tag (@user.photo_url), :class => "circle responsive-image profile-pic" %><br>
		<strong><%= @suggestions.count %> suggestions </strong>
		</p>
	</div>
</div>


<% @suggestions.each do |suggestion| %>
<div class="row suggestion">
	<div class="col s2">
		<%= image_tag (@user.photo_url), :class => "circle responsive-image sugg-user" %>
		<br>
		<span class="star"><i class="material-icons left">grade</i></span>
		<br>
	</div>
	<div "col s8">
		<p class="suggestionInfo">
			<strong><%= @user.first_name + " " + @user.last_name[0] + "." %></strong> went to <strong><%= suggestion.location %></strong> and had 
			<% if suggestion.experience_type == "positive" %>
				a <strong><span class="positive"> <%= suggestion.experience_type %></span></strong>
			<% elsif suggestion.experience_type == "okay" %>
				an <strong><span class="okay"> <%= suggestion.experience_type %></span></strong>
			<% elsif suggestion.experience_type == "negative" %>
				a <strong><span class="negative"> <%= suggestion.experience_type %></span></strong>
			<% end %>
			experience. 
			<br><br>
			<span class="description">
				<%= suggestion.description %>
			</span>
			</div>
				<%= image_tag (suggestion.photo_url), :class => "responsive-image sugg-photo" %>
			</div>
		</p>				
	</div>
	<div class="col s2"></div>
	<hr>
</div>
<% end %>